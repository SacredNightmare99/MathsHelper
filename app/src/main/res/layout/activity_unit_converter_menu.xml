<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".UnitConverter.UnitConverterMenuActivity">

    <TextView
        android:id="@+id/txtUnitConverterMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/unit_converters"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/lengthConvertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/length"
        app:layout_constraintEnd_toEndOf="@+id/txtUnitConverterMenuTitle"
        app:layout_constraintStart_toStartOf="@+id/txtUnitConverterMenuTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtUnitConverterMenuTitle" />

    <Button
        android:id="@+id/speedConvertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/speed"
        app:layout_constraintEnd_toEndOf="@+id/lengthConvertBtn"
        app:layout_constraintStart_toStartOf="@+id/lengthConvertBtn"
        app:layout_constraintTop_toBottomOf="@+id/lengthConvertBtn" />

    <Button
        android:id="@+id/unitConvertBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>